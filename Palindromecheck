#include<bits/stdc++.h>
using namespace std;

//#15
//Palindrome check
// O(n) time | O(1) space
bool isPalindrome(string str) {
	int leftIdx = 0;
	int rightIdx = str.length() - 1;
	while (leftIdx < rightIdx) {
		if (str[leftIdx] != str[rightIdx]) {
			return false;
		}
		leftIdx++;
		rightIdx--;
	}
	return true;
}
